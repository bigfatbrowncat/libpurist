{
    "clangd.path": "/usr/bin/clangd-19",
    "clangd.arguments": ["-log=verbose", 
                         "-pretty", 
                         "--background-index", 
                         "--suggest-missing-includes",
                         "--query-driver=/usr/local/bin/neo-clang++", //for cross compile usage
                         "--compile-commands-dir=${workspaceRoot}/build-${buildType}"],
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true
    },
    "files.watcherInclude": [
        "third_party/prefix/include/**"
    ],
    "cmake.buildDirectory": "${workspaceFolder}/build-${buildType}",
    "cmake.environment": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "1",
        "LSAN_OPTIONS": "suppressions=${workspaceFolder}/lsan-suppressions.supp"
    }
}