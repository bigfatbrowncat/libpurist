    "version": "0.2.0",
    "configurations": [
        {
            "name": "blinking_screen",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.buildDirectory}/examples/blinking_screen/blinking_screen",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [ 
                { 
                    "name": "ASAN_OPTIONS",
                    "value": "halt_on_error=1:abort_on_error=1"
                },
                { 
                    "name": "LSAN_OPTIONS",
                    "value": "suppressions=${workspaceFolder}/lsan-suppressions.supp"
                }

            ],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "text_input_skia",
