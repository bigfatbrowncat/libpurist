            "environment": [ 
                { 
                    "name": "ASAN_OPTIONS",
                    "value": "halt_on_error=1:abort_on_error=1"
                },
                { 
                    "name": "LSAN_OPTIONS",
                    "value": "suppressions=${workspaceFolder}/lsan-suppressions.supp"
                }

            ],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "term_skia",
            "type": "cppdbg",
